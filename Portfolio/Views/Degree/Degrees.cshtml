@using Portfolio.Data
@model Degree

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section id="hero" class="d-flex align-items-center">

    <div class="container-fluid" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 pt-3 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">University Name</th>
                            <th style="color:white">Remove</th>
                            <th style="color:white">Edit</th>
                            <th style="color:white">
                                @Html.ActionLink("Create", "DegreeCreate", "Degree",
                                new { @class = "btn btn-dark" } , new { @style = "color:white" })
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var x in (List<Degree>)ViewBag.Degrees)
                            {
                                <tr>
                                    <td style="color:white">@x.DegreeName</td>
                                    <td>
                                        @Html.ActionLink("Remove", "RemoveDegree", "Degree",
                                       new { Id = x.DegreeId }, new { @class = "btn btn-dark" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "DegreeEdit", "Degree",
                                       new { degreeId = x.DegreeId }, new { @class = "btn btn-dark" })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>