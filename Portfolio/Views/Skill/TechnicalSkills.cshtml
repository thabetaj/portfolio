@model TechnicalSkills
@using Portfolio.Data

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section id="hero" class="d-flex align-items-center">

    <div class="container-fluid" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 pt-3 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="color:white">Skill Name</th>
                            <th style="color:white">Remove</th>
                            <th style="color:white">Edit</th>
                            <th style="color:white">
                                @Html.ActionLink("Create", "TechnicalSkillCreate", "Skill",
                                new { @class = "btn btn-dark" } , new { @style = "color:white" })
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var x in (List<TechnicalSkills>)ViewBag.TechnicalSkills)
                            {
                                <tr>
                                    <td style="color:white">
                                        @x.TechnicalSkillName
                                </td>
                                <td>
                                    @Html.ActionLink("Remove", "RemoveTechnicalSkill", "Skill",
                                   new { Id = x.TechnicalSkillsId }, new { @class = "btn btn-dark" })
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "TechnicalSkillEdit", "Skill",
                                   new { technicalSkillId = x.TechnicalSkillsId }, new { @class = "btn btn-dark" })
                                </td>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
            </div>
</div></section>